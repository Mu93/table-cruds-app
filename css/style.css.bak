* {
  margin: 0;
  padding: 0;
}

body {
  font-family: system-ui;
}

.container {
  width: 60%;
  margin: auto;
  margin-top: 5vh;
}

.head {
  margin-bottom: 50px;
  text-align: center;
  text-transform: capitalize;
}

input,
button {
  width: 250px;
  height: 30px;
  border-radius: 5px;
  outline: 0;
  border: 1;
  box-shadow: rgba(128, 128, 128, 0.5);
  margin: 10px;
  padding: 2px 5px;
}

button {
  height: 35px;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  width: 265px;
}

h1 {
  font-size: 50px;
  margin-bottom: 10px;
}

table {
  border: 2px solid gray;
  border-collapse: collapse;
}

td,
th {
  width: 120px;
  height: 30px;
  border: 2px solid gray;
  padding: 5px;
}

td svg {
  cursor: pointer;
}

.group {
  width: 400px;
}
